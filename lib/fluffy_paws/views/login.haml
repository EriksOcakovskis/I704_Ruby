.row
  .large-12.columns
    %form{action: '/login', method: 'post'}
      .row
        .large-4.medium-4.columns
          %label{for: 'user-name'} Username
          %input#user-name{type: 'text', placeholder: 'Somebody', name:'user'}

          %label{for: 'user-password'} Password
          %input#user-password{type: 'password', placeholder: 'Password', name:'password'}

          %input.button.expanded{type: 'submit', value: 'Login'}
      -if @error
        %p= @error

    .row
      .large-4.medium-4.columns
        %p Forgot password?
        %a.button.expanded{type: 'submit', href: '/email-login'} Get token

    .row
      .large-4.medium-4.columns
        %p Are you new?
        %a.button.expanded{type: 'submit', href: '/register'} Register
